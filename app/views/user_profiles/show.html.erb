<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">  
    <div class="panel" style="background-color:#99CFFF">
      <table>
        <tr>
          <td>
            <strong>User Id:</strong>
          </td>
          <td>
            <%= current_user.id %>           
          </td>
        </tr>
        <tr>
          <td>
            <strong>First Name:</strong>
          </td>
          <td>
            <%= @user_profile.f_name %>
          </td>
        </tr>  
        <tr>
          <td>
            <strong>Last Name:</strong>
          </td>
          <td>
            <%= @user_profile.l_name %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Mobile Number:</strong>
          </td>
          <td>
           <%= @user_profile.mobile_number %> 
          </td>
        </tr>
        <tr>
          <td>
            <strong>Date-of-Birth</strong>
          </td>
          <td>
            <%= @user_profile.dob.strftime("%d-%b-%Y") %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Age</strong> 
          </td>
          <td>
            <%= @user_profile.age %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Gender</strong>
          </td>
          <td>
            <%= @user_profile.gender %>
          </td>
        </tr>  
        <tr>
          <td>
            <strong>Country</strong>
          </td>
          <td>
            <%= Carmen::Country.coded(@user_profile.country).name %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>State</strong>
          </td>
          <td>
            <%= Carmen::Country.coded(@user_profile.country).subregions.coded(@user_profile.state).name %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Address</strong>
          </td>
          <td>
            <%= @user_profile.address %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

