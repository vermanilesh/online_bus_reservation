<%= form_for(@reservation, url: agency_schedule_reservations_path) do |f| %>
  <div class="field" id="no_of_seats">
    <%= f.label :no_of_seats %>
    <%= f.number_field :no_of_seats, min: 1 %>
  </div>

  <div class="field">
    <%= f.label :journy_date %>
    <%= f.date_select(:journy_date, order: [:year, :month, :day], start_year: Date.today.year, end_year: Date.today.year) %>
  </div>


  <div class="field" id="fare">
    <%= f.label :fare %>
    <p id="fare"></p>
  </div>


  <%= f.submit :onclick =>"return(validate_seats())"%>
<% end %>

<script type="text/javascript" language="javascript">
  function validate_seats(){
    if (document.getElementById('reservation_no_of_seats').value == "") {
      alert("seats can not be blank");
      document.getElementById('reservation_no_of_seats').focus()
      return false;
    } 
    else {
      return true
    }      
  }

  document.ready(function(){
    $("#reservation_no_of_seats").val
  });
</script>